<h1>Create Song</h1>

<form action="/songs/:slug" method="post">

  <h2>Title: <input id="Name" type="text" name="song_name" value=""></h2>

  <h2>Artist: <input id="Artist Name" type="text" name="artist_name" value=""></h2>

  <h2>Select Genres: </h2>
    <% @genres.each do |genre| %>
      <p><%= genre.name %>: <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"></p>
    <% end %>
    
  <input type="submit" value="Create">
</form>
